generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Translation {
  id     Int    @id @default(autoincrement())
  key    String
  ns     String
  locale String
  data   String
}

model NormalizationConfigArchive {
  id        String   @id @db.VarChar(24)
  name      String
  v         Int
  createdAt DateTime
  updatedAt DateTime
  createdBy String   @db.VarChar(24)
  updatedBy String   @db.VarChar(24)
  data      Json
}

model NormalizationConfig {
  id        String   @id @db.VarChar(24)
  name      String   @unique
  v         Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String   @db.VarChar(24)
  updatedBy String   @db.VarChar(24)
  data      Json
}

model Process {
  id                    String   @id @db.VarChar(24)
  createdBy             String   @db.VarChar(24)
  createdAt             DateTime @default(now())
  // relation не делаем так как ссылаться на процесс 
  // могут не только NormalizationConfig
  // но и NormalizationConfigArchive
  normalizationConfigId String   @db.VarChar(24)
}
