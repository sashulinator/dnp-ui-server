generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Process {
  id                    String              @id @db.VarChar(24)
  createdBy             String              @db.VarChar(24)
  createdAt             DateTime            @default(now())
  normalizationConfigId String              @db.VarChar(24)
  // relations
  normalizationConfig   NormalizationConfig @relation(fields: [normalizationConfigId], references: [id])
}

model StoreConfig {
  keyname   String   @id @db.VarChar(36)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String   @db.VarChar(24)
  updatedBy String   @db.VarChar(24)
  type      String   @db.VarChar(10)
  data      Json
}

model NormalizationConfig {
  id        String    @id @db.VarChar(24)
  name      String    @unique
  v         Int
  current   Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  createdBy String    @db.VarChar(24)
  updatedBy String    @db.VarChar(24)
  data      Json
  // relations
  processes Process[]
}

